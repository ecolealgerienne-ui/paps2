// Association Animal-Lot
model LotAnimal {
  id        String   @id @default(uuid())
  farmId    String   @map("farm_id")
  lotId     String   @map("lot_id")
  animalId  String   @map("animal_id")
  joinedAt  DateTime @default(now()) @map("joined_at")
