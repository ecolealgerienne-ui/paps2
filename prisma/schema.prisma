// Pr√©f√©rences d'alertes par ferme (s√©lection des templates)
model FarmAlertTemplatePreference {
  id              String    @id @default(uuid())
  farmId          String    @map("farm_id")
  alertTemplateId String    @map("alert_template_id")

  // Pr√©f√©rences
  displayOrder    Int       @default(0) @map("display_order")
  isActive        Boolean   @default(true) @map("is_active")

  // Configuration personnalis√©e par ferme (surcharge du d√©lai par d√©faut)
  reminderDays    Int?      @map("reminder_days")

  // Standards
  version         Int       @default(1)
  deletedAt       DateTime? @map("deleted_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  farm          Farm          @relation(fields: [farmId], references: [id], onDelete: Cascade)
  alertTemplate AlertTemplate @relation(fields: [alertTemplateId], references: [id], onDelete: Cascade)
  farmAlerts    FarmAlert[]

  @@unique([farmId, alertTemplateId])
  @@index([farmId])
  @@index([alertTemplateId])
  @@index([displayOrder])
  @@index([farmId, deletedAt])
  @@map("farm_alert_template_preferences")
}

// Alertes g√©n√©r√©es dynamiquement pour une ferme
model FarmAlert {
  id                  String          @id @default(uuid())
  farmId              String          @map("farm_id")

  // R√©f√©rences vers le template et la pr√©f√©rence
  alertTemplateId     String          @map("alert_template_id")
  alertPreferenceId   String?         @map("alert_preference_id")

  // R√©f√©rences optionnelles vers les entit√©s concern√©es
  animalId            String?         @map("animal_id")
  lotId               String?         @map("lot_id")
  treatmentId         String?         @map("treatment_id")
  breedingId          String?         @map("breeding_id")
  documentId          String?         @map("document_id")

  // Dates de l'alerte
  triggeredAt         DateTime        @default(now()) @map("triggered_at")
  dueDate             DateTime?       @map("due_date")
  expiresAt           DateTime?       @map("expires_at")

  // Statut et lecture
  status              FarmAlertStatus @default(pending)
  readAt              DateTime?       @map("read_at")
  readOn              ReadPlatform?   @map("read_on")
  resolvedAt          DateTime?       @map("resolved_at")
  dismissedAt         DateTime?       @map("dismissed_at")

  // Donn√©es contextuelles (JSON flexible)
  metadata            Json            @default("{}")

  // Standards
  version             Int             @default(1)
  deletedAt           DateTime?       @map("deleted_at")
  createdAt           DateTime        @default(now()) @map("created_at")
  updatedAt           DateTime        @updatedAt @map("updated_at")

  // Relations
  farm                Farm            @relation(fields: [farmId], references: [id], onDelete: Cascade)
  alertTemplate       AlertTemplate   @relation(fields: [alertTemplateId], references: [id], onDelete: Cascade)
  alertPreference     FarmAlertTemplatePreference? @relation(fields: [alertPreferenceId], references: [id], onDelete: SetNull)
  animal              Animal?         @relation(fields: [animalId], references: [id], onDelete: Cascade)
  lot                 Lot?            @relation(fields: [lotId], references: [id], onDelete: Cascade)
  treatment           Treatment?      @relation(fields: [treatmentId], references: [id], onDelete: Cascade)
  breeding            Breeding?       @relation(fields: [breedingId], references: [id], onDelete: Cascade)
  document            Document?       @relation(fields: [documentId], references: [id], onDelete: Cascade)

  // Index de performance
  @@index([farmId])
  @@index([farmId, status])
  @@index([farmId, status, deletedAt])
  @@index([alertTemplateId])
  @@index([alertPreferenceId])
  @@index([animalId])
  @@index([lotId])
  @@index([treatmentId])
  @@index([breedingId])
  @@index([documentId])
  @@index([dueDate])
  @@index([expiresAt])
  @@index([status])
  @@index([deletedAt])

  @@map("farm_alerts")
}

