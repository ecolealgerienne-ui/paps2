// P2.2: Historique des √©v√©nements d'un lot (status_change, notes)
model LotHistory {
  id        String   @id @default(uuid())
  farmId    String   @map("farm_id")
  lotId     String   @map("lot_id")
  type      String   // status_change, note
  fromValue String?  @map("from_value")
  toValue   String?  @map("to_value")
