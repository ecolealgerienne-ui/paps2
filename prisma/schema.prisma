  clinic                String?
  phone                 String?   // Obligatoire pour global, optionnel pour local
  mobile                String?
  email                 String?
  address               String?
  city                  String?
  postalCode            String?   @map("postal_code")
  country               String?

  // Champs g√©ographiques
