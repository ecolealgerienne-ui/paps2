// Produit unifi√© (m√©dicaments + vaccins)
// Remplace MedicalProduct + Vaccine
model Product {
  id                        String              @id @default(uuid())

  // SCOPE PATTERN
  scope                     DataScope           // "global" | "local"
  farmId                    String?             @map("farm_id")  // NULL si global, SET si local

  // Identification
  code                      String?             @unique  // Obligatoire pour global, optionnel pour local
  nameFr                    String              @map("name_fr")
  nameEn                    String?             @map("name_en")
  nameAr                    String?             @map("name_ar")
  commercialName            String?             @map("commercial_name")
  description               String?

  // Classification
  type                      ProductType?        // antibiotic, vaccine, antiparasitic, etc.
  atcVetCode                String?             @map("atc_vet_code")  // Code ATCvet (ex: QJ01MA90)

  // Simplified fields (Phase 0 - replaces FK references)
  categoryCode              String?             @map("category_code")  // "antibiotics", "vaccines", etc. (replaces categoryId)
  composition               String?             // Active substance text (replaces substanceId relation)
  therapeuticForm           String?             @map("therapeutic_form")  // "comprim√©", "injectable", "poudre"
  dosage                    String?             // "100 mg/ml", "250 mg"
  administrationRoute       String?             @map("administration_route")  // "oral", "injectable", "topique"
  targetSpecies             String[]            @default([]) @map("target_species")  // ["cattle", "sheep", "goats"]
  withdrawalMeatDays        Int?                @map("withdrawal_meat_days")  // Default withdrawal period (meat)
  withdrawalMilkHours       Int?                @map("withdrawal_milk_hours") // Default withdrawal period (milk)
  prescriptionRequired      Boolean             @default(false) @map("prescription_required")

  // Fabrication
  manufacturer              String?
  form                      String?             // injectable, oral, topical, powder, tablet (legacy, use therapeuticForm)

  // Sp√©cifique vaccins (type = vaccine)
  targetDisease             String?             @map("target_disease")  // Maladie cibl√©e
  immunityDurationDays      Int?                @map("immunity_duration_days")  // Dur√©e immunit√© en jours

  // M√©tadonn√©es
  notes                     String?
  isActive                  Boolean             @default(true) @map("is_active")
  version                   Int                 @default(1)
  deletedAt                 DateTime?           @map("deleted_at")
  createdAt                 DateTime            @default(now()) @map("created_at")
  updatedAt                 DateTime            @updatedAt @map("updated_at")

  // Relations
  farm                      Farm?               @relation(fields: [farmId], references: [id], onDelete: Cascade)
  treatments                Treatment[]
  lots                      Lot[]
  personalCampaigns         PersonalCampaign[]
  farmPreferences           FarmProductPreference[]

  // Indexes simples
  @@index([scope])
  @@index([farmId])
  @@index([code])
  @@index([type])
  @@index([manufacturer])
  @@index([isActive])
  @@index([deletedAt])

  // Indexes composites (performance)
  @@index([scope, farmId])
  @@index([scope, isActive])
  @@index([scope, isActive, deletedAt])
  @@index([farmId, isActive, deletedAt])
  @@index([type, isActive, deletedAt])

  @@map("products")
}



// V√©t√©rinaires (Master Table Pattern - multi-scope)
